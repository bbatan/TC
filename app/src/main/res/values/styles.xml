<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--<item name="windowTranslucentStatus">true</item>-->
    </style>

    <style name="MediumText" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:paddingLeft">@dimen/side_border_padding</item>
        <item name="android:paddingRight">@dimen/side_border_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ContactText" parent="android:TextAppearance">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingLeft">@dimen/side_border_padding</item>
        <item name="android:paddingRight">@dimen/side_border_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="HintText" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">@dimen/side_border_padding</item>
        <item name="android:paddingRight">@dimen/side_border_padding</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <!--<style name="EditText" parent="android:TextAppearance">-->
        <!--<item name="android:textSize">16sp</item>-->
        <!--<item name="android:textColorHint">@color/secondary_text</item>-->
        <!--<item name="android:textColor">@color/primary_text</item>-->
    <!--</style>-->
    <style name="EditLabel" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <!--<style name="EditSpinner" parent="android:TextAppearance">-->
        <!--<item name="android:textSize">16sp</item>-->
        <!--<item name="android:textColor">@color/md_grey_800</item>-->
        <!--<item name="android:textColorSecondary">@color/md_grey_100</item>-->
    <!--</style>-->
    <style name="ImageButton" parent="android:Widget.ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="ImageButton.Yes">
        <item name="android:background">@drawable/green_circle</item>
        <item name="android:src">@drawable/ic_action_yes</item>
    </style>
    <style name="ImageButton.No">
        <item name="android:background">@drawable/red_circle</item>
        <item name="android:src">@drawable/ic_action_no</item>
    </style>
    <style name="ImageButton.DND">
        <item name="android:background">@drawable/grey_circle</item>
        <item name="android:src">@drawable/ic_action_dnd</item>
    </style>
</resources>
